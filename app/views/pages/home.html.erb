<style>
body { 
	text-align: center;
	
	}
</style>
<% colors = ["#FFD1FF", "#D1FFD1", "#FFD1E8", "#D1FFE8" ] %>
<h1>The feed</h1>
<% @posts.each do |post| %>
	<% if /www\.youtube\.com.*/.match(post["link"]) %>
	<div style="background-color:<%= colors[rand(0..3)]%>; padding: 0px 100px 0px 100px;">
	<h2 style="text-decoration: blink;">ITS A VIDEO !!!!!!!!</h2>
		<span>
			<strong>
				<%= post["from"]["name"] %></br>
			</strong>
			 Description: <%= post["description"] %>
		</span>
		<iframe width="420" height="315" src="http://www.youtube.com/embed/
		<%= post["link"].split("=").last %>" frameborder="0" allowfullscreen>
		</iframe>
	</div>
	<% else %>
	<div style="background-color: <%= colors[rand(0..3)]%>; padding: 0px 100px 0px 100px;">	
	<h2>another dumb post!</h2>
	
	<strong><%= post["from"]["name"] %></strong></br>
	<%= post["message"] %>
	</div>		
	<% end %>
<% end %>


